@using EntityLayer.Concrete
@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div id="wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Roller</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Rol Adı</th>
                                <th>Düzenle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td><a href="~/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-info">Düzenle</a></td>
                                    <td><a href="~/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-warning">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="~/Admin/AdminRole/AddRole/" class="btn btn-outline-primary">Yeni Rol Ekle</a>
                    <a href="~/Admin/AdminRole/UserRoleList/" class="btn btn-outline-info">Üye Rolleri</a>
                </div>
            </div>
        </div>
    </div>
</div>

