<div class="tech-btm">
    <p style="font-weight:bold">Mail bültenine abone ol</p>
    <form method="post">
        <input type="email" placeholder="Email" required="" name="Mail" id="txtmail">
        <input type="submit" value="Abone Ol" id="btnSubscribe">
    </form>

</div>

<script type="text/javascript">

    $("#btnSubscribe").click(function(){
        let values = {
            Mail:$("#txtmail").val()
        };

        $.ajax({
            type:"post",
            url: "/Newsletter/SubscribeMail/",
            data: values,
            success:function(func){
                let result = jQuery.parseJSON(func);
            }
        });
    });

</script>

